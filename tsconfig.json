{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "outDir": "./dist",
        "moduleResolution": "node",
        "jsx": "react",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,        
        "esModuleInterop": true
    },
    "include": [
        "src/**/*", 
        "types",
        
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}